#!/bin/bash
# Bash completion for lab-utils
# Provides autocompletion for lab-utils commands and available scripts
# Supports both top-level and nested scripts (parent/child format)

_lab_utils_completions() {
    local cur prev opts scripts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    # Options
    opts="--help -h --list -l --create-local"

    # Script directories
    local global_dir="/opt/utils/lab-utils.d"
    local local_dir="${HOME}/.local/lab-utils.d"

    # Collect script names (without extension) including nested scripts
    scripts=""

    # Helper function to collect scripts from a directory
    _collect_scripts() {
        local dir="$1"
        if [[ ! -d "$dir" ]]; then
            return
        fi

        for script in "$dir"/*; do
            # Skip if not a file or not executable
            [[ ! -f "$script" || ! -x "$script" ]] && continue

            # Skip README files
            local basename=$(basename "$script")
            [[ "$basename" == "README"* ]] && continue

            # Get name without extension
            local name="${basename%.*}"
            scripts="$scripts $name"

            # Check for corresponding .d subdirectory with nested scripts
            local subdir="${dir}/${name}.d"
            if [[ -d "$subdir" ]]; then
                for child_script in "$subdir"/*; do
                    [[ ! -f "$child_script" || ! -x "$child_script" ]] && continue
                    local child_basename=$(basename "$child_script")
                    [[ "$child_basename" == "README"* ]] && continue
                    local child_name="${child_basename%.*}"
                    scripts="$scripts ${name}/${child_name}"
                done
            fi
        done
    }

    _collect_scripts "$global_dir"
    _collect_scripts "$local_dir"

    # First argument - complete with options and script names
    if [[ ${COMP_CWORD} -eq 1 ]]; then
        COMPREPLY=( $(compgen -W "${opts} ${scripts}" -- "${cur}") )
        return 0
    fi

    # For subsequent arguments, provide file completion
    COMPREPLY=( $(compgen -f -- "${cur}") )
    return 0
}

complete -F _lab_utils_completions lab-utils

